<section class="row m-5">
  <article class="col-6">
    <h2 class="custom-text1">Login</h2>

    <form id="login-form">
      <div class="form-group">
        <label for="email-login" class="custom-text1">Email</label>
        <input type="text" class="form-control" id="email-login" placeholder="youremail@here.com" />
      </div>
      <div class="form-group">
        <label for="password-login" class="custom-text1">Password</label>
        <input type="password" class="form-control" id="password-login" placeholder="Password here" />
      </div>
    </form>
    <button class="btn btn-primary" id="loginBtn" type="submit">Login</button>
  </article>
  <article class="col-6">
    <h2 class="custom-text1">Sign-up</h2>

    <form id="signup-form">
      <div class="form-group">
        <label for="first-name-signup" class="custom-text1">First Name</label>
        <input type="text" class="form-control" id="firstname" placeholder="First Name" />
      </div>
      <div class="form-group">
        <label for="last-name-signup" class="custom-text1">Last Name</label>
        <input type="text" class="form-control" id="lastname" placeholder="Last Name" />
      </div>
      <div class="form-group">
        <label for="email-signup" class="custom-text1">Email</label>
        <input type="text" class="form-control" id="email" placeholder="youremail@here.com" />
      </div>
      <div class="form-group">
        <label for="password-login" class="custom-text1">Password</label>
        <input type="password" class="form-control" id="password" placeholder="Password here" />
      </div>

      <button class="btn btn-primary my-2" id="signupBtn" type="submit">Sign-up</button>

    </form>

  </article>
</section>

<script src="./js/login.js"></script>