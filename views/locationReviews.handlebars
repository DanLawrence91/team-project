<div class="col" id="location-content">

</div>

<div class="row"></div>
  <h3>Comment here if you'd like</h3>
  <input type="text" id="newReview"></input>
  <div class="rating" id="ratingList"> 
    <input type="radio" name="rating" value="5" id="5"><label for="5">☆</label></input>
    <input type="radio" name="rating" value="4" id="4"><label for="4">☆</label></input>
    <input type="radio" name="rating" value="3" id="3"><label for="3">☆</label></input>
    <input type="radio" name="rating" value="2" id="2"><label for="2">☆</label></input>
    <input type="radio" name="rating" value="1" id="1"><label for="1">☆</label></input>
  </div>
  <button id="reviewBtn">Comment</button>
</div>

<!-- {{!-- Comment detail--}} -->
<div class="col mt-4">
  <h4>Reviews</h4>
  <div class="col-md-6 project-list">
    {{#each locationReviews as |locationReview|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h3>{{locationReview.review_score}}</h3>
          <h4>{{locationReview.content}}</h4>
          <p>Written by: {{user.firstname}} {{user.lastname}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<script src="./js/locationscript.js"></script>