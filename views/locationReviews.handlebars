<h2 class="custom-text1">{{location_name}}</h2>
<p class="custom-text1">See below for local restaurants</p>

<div class="col mt-4 custom-bkg2">
  <h4>Reviews</h4>
  <div class="project-list">

    {{#each locationReviews as |locationReview|}}
      <div class="row mb-2">

        <div class="w-100">
          <div class="d-flex justify-content-between px-4">
            <p class="d-inline font-weight-bold">{{locationReview.content}}</p>
            <p class="d-inline font-weight-bold">{{locationReview.review_score}}☆ out of 5☆</p>
          </div>
          <p class="px-4">Written by: {{user.firstname}} {{user.lastname}}</p>
          <hr />
        </div>
      </div>

    {{/each}}
  </div>
</div>

<div class="col custom-bkg2 my-3 p-2">
  <h3>Comment here if you'd like</h3>
  <textarea class="w-100" type="text" id="newReview" rows="5"></textarea>
  <div class="rating" id="ratingList"> 
    <input type="radio" name="rating" value="1" id="1"><label for="1">☆</label></input>
    <input type="radio" name="rating" value="2" id="2"><label for="2">☆</label></input>
    <input type="radio" name="rating" value="3" id="3"><label for="3">☆</label></input>
    <input type="radio" name="rating" value="4" id="4"><label for="4">☆</label></input>
    <input type="radio" name="rating" value="5" id="5"><label for="5">☆</label></input>
  </div>
  <button id="reviewBtn">Comment</button>
</div>

<div class="col d-flex flex-row flex-wrap" id="location-content">

</div>

<script src="./js/locationscript.js"></script>