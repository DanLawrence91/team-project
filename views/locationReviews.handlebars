<div class="col mt-4">
  <div class="col-md-6">
    <!-- {{!-- termimage --}} -->
    <div class="card-body">
      <div class="card mb-3">
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">Event Name</h5>
          <p class="card-text">Some details or descriptions</p>
          <p class="card-text"><small class="text-muted">May be comment rating here</small></p>
        </div>
      </div>
    </div>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="comments">Put comments here:</label>
        <input class="form-input" type="text" id="comments" name="comments" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Comment</button>
      </div>
    </form>
  </div>
</div>

<!-- {{!-- Comment detail--}} -->
<div class="col mt-4">
  {{#if locationReviews.length}}
    <h4>Reviews</h4>
    <div class="col-md-6 project-list">
      {{#each locationReviews as |locationReview|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h3>{{locationReview.review_score}}</h3>
            <h4>{{locationReview.content}}</h4>
            <p>Written by: {{user.first_name}} {{user.last_name}}</p>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}